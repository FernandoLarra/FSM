<table class="responsive-table">
  <thead>
    <tr>
        <th>Nit</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Telefono</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
    <tr>
      <td><%= cliente.nit %></td>
      <td><%= cliente.nombre %></td>
      <td><%= cliente.apellidos %></td>
      <td><%= cliente.telefono %></td>
    </tr>
    <% end %>
  </tbody>
</table>