<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <div class="row">
      <br><br>
      <h1 class="header center light-blue-text">Facturas</h1>
      <br><br>
      <div class="row">
        <form class="col s6" action="/factura" method="get">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">local_atm</i>
            <input name="no_factura" type="text" placeholder="No. Factura" class="validate">
            <label for="no_factura">No. Factura</label>
            </div>
          </div>
          <input type="submit" value="Buscar Factura">
        </form>
        <form class="col s6" action="/facturas/nuevo" method="get">
          <div class="row">
            <div class="input-field col s6">
              <input disabled name="nit" type="text" class="validate">              
            </div>
          </div>
          <input type="submit" value="Facturar">
        </form>
      </div>
      <%= yield %>
    </div>
  </div>
</div>