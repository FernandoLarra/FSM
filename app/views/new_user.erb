<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <br><br>
    <h1 class="header center light-blue-text">Nuevo Usuario</h1>
    <br><br>
    <div class="row">
      <form class="col s12" action="/users" method="post">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">person</i>
            <input type="text" name="first_name" placeholder="Nombre Usuario" class="validate">
            <label for="first_name">Nombre Usuario</label>
          </div>
          <div class="input-field col s12">
            <i class="material-icons prefix">person</i>
            <input type="text" name="last_name" placeholder="Apellidos" class="validate">
            <label for="last_name">Apellido</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">mail</i>
            <input type="email" name="email" placeholder="Correo" class="validate">
            <label for="email">Correo Electronico</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">password</i>
            <input type="password" name="password" placeholder="Contraseña" class="validate">
            <label for="password">Contraseña</label>
          </div>
        </div>
        <input type="submit" value="Agregar Usuario">
      </form>
    </div>
  </div>
</div>
<div class="container"></div>